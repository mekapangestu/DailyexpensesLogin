<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="android.dailyexpenses.unpas.dailyexpenses.PemasukanRutinActivity"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="#ffdddad2">

    <Button
        android:id="@+id/btnTambahPemasukan"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="+"
        android:textSize="30dp"
        android:background="@drawable/button_blue"
        android:onClick="tambahPemasukanRutin"
        android:textColor="#ffffffff" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listViewPemasukanRutin"
        android:background="@android:color/background_light"
        android:dividerHeight="4dp"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:drawSelectorOnTop="false" />


</LinearLayout>


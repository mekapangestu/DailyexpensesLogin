<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="android.dailyexpenses.unpas.dailyexpenses.Setting"
    android:background="#FFFFFFFF">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Kategori Pemasukan"
        android:id="@+id/button3"
        android:layout_marginTop="30dp"
        android:onClick="openKategoriPemasukan"
        android:background="#16a085"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#FFFFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Kategori Pengeluaran"
        android:id="@+id/button4"
        android:onClick="openKategoriPengeluaran"
        android:background="#16a085"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#FFFFFFFF"
        android:layout_below="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Kategori Pemasukan Rutin"
        android:id="@+id/button7"
        android:onClick="openKategoriPemasukanRutin"
        android:background="#16a085"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#FFFFFFFF"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Kategori Pengeluaran Rutin"
        android:id="@+id/button8"
        android:onClick="openKategoriPengeluaranRutin"
        android:background="#16a085"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#FFFFFFFF"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Set PIN"
        android:id="@+id/button9"
        android:onClick="openPin"
        android:layout_marginTop="5dp"
        android:background="#16a085"
        android:layout_below="@+id/button8"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFFFF" />

</RelativeLayout>

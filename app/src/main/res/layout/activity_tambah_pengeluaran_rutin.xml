<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="android.dailyexpenses.unpas.dailyexpenses.TambahPengeluaranRutin"
    android:background="#ffdddad2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:id="@+id/entryNama"
        android:text="Kategori :"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nominal :"
        android:id="@+id/textView3"
        android:inputType="textCapCharacters"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/spinner2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/jumlahInput"
        android:inputType="number"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Keterangan :"
        android:id="@+id/entryJumlah"
        android:inputType="textCapCharacters"
        android:layout_below="@+id/jumlahInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/deskInput"
        android:layout_below="@+id/entryJumlah"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffffff" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="simpan"
        android:id="@+id/button"
        android:onClick="addNewPengeluaranRutin"
        android:background="@drawable/button_blue"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keluar"
        android:id="@+id/button2"
        android:onClick="closeNewPengeluaranRutin"
        android:background="@drawable/button_green"
        android:layout_below="@+id/txtTime2"
        android:layout_toRightOf="@+id/entryJumlah"
        android:layout_toEndOf="@+id/entryJumlah"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tanggal :"
        android:id="@+id/textView"
        android:layout_below="@+id/deskInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/spinner2"
        android:layout_below="@+id/entryNama"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffffff" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/txtDate2"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffffff"
        android:enabled="true"
        android:inputType="date"
        android:editable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Jam : "
        android:id="@+id/textView5"
        android:layout_below="@+id/txtDate2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/txtTime2"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffffff"
        android:enabled="true"
        android:inputType="time"
        android:editable="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Tanggal"
        android:id="@+id/btnCalendar2"
        android:layout_alignTop="@+id/txtDate2"
        android:layout_toRightOf="@+id/txtDate2"
        android:layout_toEndOf="@+id/txtDate2"
        android:layout_marginLeft="20dp"
        android:background="@drawable/button_blue"
        android:gravity="center"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="jam"
        android:id="@+id/btnTimePicker2"
        android:background="@drawable/button_blue"
        android:layout_alignTop="@+id/txtTime2"
        android:layout_alignLeft="@+id/btnCalendar2"
        android:layout_alignStart="@+id/btnCalendar2"
        android:gravity="center"
        android:textColor="#ffffffff" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageButton5"
        android:layout_alignTop="@+id/spinner2"
        android:layout_alignLeft="@+id/btnCalendar2"
        android:layout_alignStart="@+id/btnCalendar2"
        android:background="@mipmap/plus"
        android:onClick="openKategoriPengeluaranRutin" />

</RelativeLayout>
